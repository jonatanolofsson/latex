}
\newcommand\generictikzfig[5]{%
  \begin{figure}[#5]%
    \centering%
    \resizebox{#1\linewidth}{!}{\input{\currentchapter/#2}}%
    \caption{#3}\label{#4}%
  \end{figure}%
}
\newcommand\tikzfig[4]{\generictikzfig{#1}{#2}{#3}{#4}{h}}
\newcommand\tikzfigH[4]{\generictikzfig{#1}{#2}{#3}{#4}{H}}
